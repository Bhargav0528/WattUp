<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhargav.wattup.HoursInfoActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="     Module number"
            android:layout_weight="2"
            android:textAppearance="?android:textAppearanceLarge"
            android:id="@+id/apll"/>
        <EditText
            android:id="@+id/module"
            android:layout_width="0dp"
            android:layout_weight="0.95"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:text="     Fans"
            android:layout_weight="2"
            android:textAppearance="?android:textAppearanceLarge" />

        <EditText
            android:id="@+id/fan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="     Bulbs"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/bulb"
            android:layout_width="102dp"
            android:layout_height="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="     AirConditioner"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/ac"
            android:layout_width="102dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="     Ovens"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/oven"
            android:layout_width="101dp"
            android:layout_height="60dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="     Refrigerators"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/ref"
            android:layout_width="101dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="     Speakers"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/speak"
            android:layout_width="100dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="     TV"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/tv"
            android:layout_width="101dp"
            android:layout_height="60dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="     WaterHeater"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/water"
            android:layout_width="99dp"
            android:layout_height="60dp" />
    </LinearLayout>



</LinearLayout>
